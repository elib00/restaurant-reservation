<!-- app/views/admin/reservations/calendar.html.erb -->
<div class="container mt-5">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Reservation Calendar - <%= @date.strftime("%B %d, %Y") %></h1>
    <div>
      <%= link_to "Previous Day", calendar_admin_reservations_path(date: @date - 1.day), class: "btn btn-secondary me-2" %>
      <%= link_to "Next Day", calendar_admin_reservations_path(date: @date + 1.day), class: "btn btn-secondary" %>
    </div>
  </div>

  <%= render "shared/calendar" %>
</div>
