<div class="container mt-5">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Manage Time Slots</h1>
    <%= link_to "Add Time Slot", new_admin_time_slot_path, class: "btn btn-primary" %>
  </div>

  <% if @time_slots.any? %>
    <table class="table table-striped align-middle">
      <thead class="table-dark">
        <tr>
          <th>Start Time</th>
          <th>End Time</th>
          <th>Max Tables</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @time_slots.each do |ts| %>
          <tr>
            <td><%= ts.start_time.strftime("%I:%M %p") %></td>
            <td><%= ts.end_time.strftime("%I:%M %p") %></td>
            <td><%= ts.max_tables %></td>
            <td>
              <%= link_to "Edit", edit_admin_time_slot_path(ts), class: "btn btn-sm btn-warning" %>
              <%= link_to "Delete", admin_time_slot_path(ts), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-sm btn-danger" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <p>No time slots available. Please add one.</p>
  <% end %>
</div>
