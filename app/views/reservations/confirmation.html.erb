<div class="container mt-5">
  <div class="card shadow-sm mx-auto" style="max-width: 600px;">
    <div class="card-body">
      <h2 class="card-title mb-4 text-center">Reservation Confirmed!</h2>

      <p><strong>Date:</strong> <%= @reservation.date.strftime("%B %d, %Y") %></p>
      <p><strong>Time:</strong> <%= @reservation.time_slot.formatted_range %></p>
      <p><strong>Guests:</strong> <%= @reservation.guest_count %></p>
      <p><strong>Table:</strong> <%= @reservation.table.name %></p>
      <p><strong>Special Requests:</strong> <%= @reservation.special_request.presence || "â€”" %></p>
      <p><strong>Email:</strong> <%= @reservation.user.email %></p>
      <p><strong>Contact Number:</strong> <%= @reservation.user.contact_number %></p>

      <div class="d-grid mt-4">
        <%= link_to "Back to Reservations", reservations_path, class: "btn btn-primary" %>
      </div>
    </div>
  </div>
</div>
